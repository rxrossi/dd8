{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2017", "dom"],
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "entity/*": ["src/entity/*"],
      "app/*": ["src/*"],
      "testUtils/*": ["testUtils/*"]
    }
  },
  "exclude": ["node_modules"],
  "compileOnSave": false
}
